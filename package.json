{
  "private": true,
  "workspaces": [
    "next-app",
    "payload-cms"
  ],
  "name": "sjdco-2024",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --names CMS,NEXT -c auto \"npm run dev:cms\" \"npm run dev:next\"",
    "dev:cms": "cd payload-cms && npm run dev",
    "generate:types": "cd payload-cms && npm run generate:types",
    "dev:next": "cd next-app && npm run dev",
    "prettier": "npx prettier . -w"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "packageManager": "yarn@4.1.0"
}
